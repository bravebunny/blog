.game-links
  if game.web
    a(href="#{ game.web }" target="_blank" title="Play it!") 
      i.fa.fa-gamepad
      span Play it!
  if game.mobile
    a(href="#{ game.mobile }" target="_blank" title="Play on a touch device") 
      i.fa.fa-mobile
      span Play on a touch device
  if game.steam
    a(href="#{ game.steam }" target="_blank" title="Steam") 
      i.fa.fa-steam
      span Steam
  if game.android
    a(href="#{ game.android }" target="_blank" title="Android") 
      i.fa.fa-android
      span Android
  if game.apple
    a(href="#{ game.apple }" target="_blank" title="iOS") 
      i.fa.fa-apple
      span iOS
  if game.windows
    a(href="#{ game.windows }" target="_blank" title="Windows") 
      i.fa.fa-windows
      span Windows
  if game.github
    a(href="#{ game.github }" target="_blank" title="Source") 
      i.fa.fa-github
      span Source
